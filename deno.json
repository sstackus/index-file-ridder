{
  "lock": false,
  "nodeModulesDir": true,
  "tasks": {
    "start": "deno run --allow-read --allow-write index.ts",
    "watch": "deno run --allow-read --allow-write --watch index.ts"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/"]
  },
  "test": {
    "include": ["src/"],
    "exclude": ["src/testdata/"]
  }
}
